@model IEnumerable<MalekServer3.Models.TblComment>

@{
    ViewBag.Title = "پیام ها";
}
<!-- UIkit CSS -->
<link href="/Styles/UIKit/uikit.min.css" rel="stylesheet" />
<link href="~/Styles/Tables.min.css" rel="stylesheet" />
<table dir="rtl" class="uk-margin-small-right uk-table .uk-table-hover uk-table-middle uk-table-divider uk-table uk-table-striped ">
    <thead>
        <tr>
            <th>نام فرستنده</th>
            <th>تاریخ</th>
            <th>متن</th>
            <th>وضعیت</th>
            <th>حذف</th>
        </tr>
    </thead>
    <tbody id="tbody">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TblClient.Name</td>
                <td>@item.Date.ToShamsi()</td>
                <td>@item.Body</td>

                @if (item.IsValid)
                {
                    <td>
                        <a onclick="HideComment(@item.id)" href="#" uk-icon="icon: close"></a>
                    </td>
                }
                else
                {
                    <td>
                        <a onclick="ShowComment(@item.id)" href="#" uk-icon="icon: check"></a>
                    </td>

                }
                <td>
                    <a onclick="DeleteComment(@item.id)" href="#" uk-icon="icon: trash"></a>
                </td>

            </tr>
        }

    </tbody>
</table>
@section Scripts{
    <script src="~/Scripts/Admin/Comments.js"></script>
}