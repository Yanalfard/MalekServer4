@model IEnumerable<MalekServer3.Models.TblAd>

@{
    ViewBag.Title = "لیست تبلیغات";
}

<link href="~/Styles/Blog.min.css" rel="stylesheet" />
<div class="space-nav-bottom"></div>
<!-- #endregion -->

<div class="browse uk-padding uk-margin-auto
         uk-margin-medium-top uk-margin-medium-bottom">

    <!-- #region blog -->


    @foreach (var item in Model)
    {
        <article class="blog-block column">
            <img src="~/Resources/Images/@item.Image" alt="" />
            <div class="column">
                <h3 class="uk-margin-remove">@item.Link</h3>
                <div class="row">
                    <a href="/Admin/Ad/EditAd/@item.id" class="uk-button uk-button-primary uk-margin-top">
                        <span uk-icon="icon: file-edit"></span>
                        <span>ویرایش</span>
                    </a>
                    <a onclick="deleteAd(@item.id)" class="uk-button uk-button-default uk-margin-top uk-margin-right">
                        <span uk-icon="icon: trash"></span>
                    </a>
                </div>
            </div>
        </article>
    }
    <!-- #endregion -->


</div>

@section Scripts{
    <script src="~/Scripts/Admin/Ads.js"></script>
}