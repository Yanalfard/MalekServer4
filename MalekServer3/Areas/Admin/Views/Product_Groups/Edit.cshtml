@model MalekServer3.Models.TblCatagory


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form uk-margin-auto uk-margin-bottom uk-margin-medium-top">

        @Html.ValidationSummary(true, "", new { @class = "uk-text-danger" })
        @Html.HiddenFor(model => model.id)
        <div class="row">
            <a onclick="UpdateCatagory();" class="uk-button uk-button-primary uk-margin-right">ویرایش</a>
            <input type="text" id="CatagoryName" value="@Model.Name" class="uk-input uk-margin-small-right" placeholder="دسته جدید" />
        </div>
        
        <input type="hidden" name="IdCatagory" id="IdCatagory" value="@Model.id" />
    </div>
}



