@model IEnumerable<MalekServer3.Models.TblAd>
<div class="col-md-6">
    <div class="thumbnail no-border no-padding thumbnail-banner size-1x3">
        @foreach (var item in Model)
        {
            <div class="media">
                <a class="media-link" href="@item.Link">
                    <div class="img-bg" style="background-image: url('/Resources/Images/@item.Image')"></div>
                    <div class="caption">
                        <div class="caption-wrapper div-table">
                            <div class="caption-inner div-cell">

                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

